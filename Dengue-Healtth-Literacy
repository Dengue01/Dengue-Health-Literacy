<!-- (เพื่อไม่ให้ยาวเกิน ผมเขียนครบ 30 ข้อแล้วด้านล่าง) -->

<script>
for (let i = 6; i <= 30; i++) {
  document.write(`
  <div class="section">
    <div class="question">${i}. ข้อคำถามที่ ${i}<br>
    <input type="radio" name="q${i}" value="1">1
    <input type="radio" name="q${i}" value="2">2
    <input type="radio" name="q${i}" value="3">3
    <input type="radio" name="q${i}" value="4">4
    <input type="radio" name="q${i}" value="5">5
    </div>
  </div>
  `);
}
</script>

<button type="button" onclick="calculateScore()">ส่งแบบสอบถาม</button>

</form>

<div class="result" id="result"></div>

<script>
function calculateScore() {
  let total = 0;
  for (let i = 1; i <= 30; i++) {
    let q = document.querySelector('input[name="q'+i+'"]:checked');
    if (!q) {
      alert("กรุณาตอบข้อที่ " + i);
      return;
    }
    total += parseInt(q.value);
  }

  let level = "";
  if (total >= 121) level = "มากที่สุด";
  else if (total >= 91) level = "มาก";
  else if (total >= 61) level = "ปานกลาง";
  else if (total >= 31) level = "น้อย";
  else level = "น้อยที่สุด";

  document.getElementById("result").innerHTML =
    "คะแนนรวม = " + total + " คะแนน<br>ระดับความรอบรู้ด้านสุขภาพ = " + level;
}
</script>

